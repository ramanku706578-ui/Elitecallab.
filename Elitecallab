// Creators Page
const CreatorsPage = () => {
  const [filter, setFilter] = useState('all');
  
  const creators = [
    { name: "TechWithTom", niche: "AI & Tech", followers: "450K", category: "tech", image: "TT" },
    { name: "SarahStyle", niche: "Fashion & Lifestyle", followers: "890K", category: "lifestyle", image: "SS" },
    { name: "FitnessPro", niche: "Health & Fitness", followers: "320K", category: "fitness", image: "FP" },
    { name: "CryptoKing", niche: "Finance & Crypto", followers: "1.2M", category: "finance", image: "CK" },
    { name: "FoodieJane", niche: "Food & Travel", followers: "650K", category: "lifestyle", image: "FJ" },
    { name: "CodeMaster", niche: "Programming", followers: "280K", category: "tech", image: "CM" },
  ];

  const filteredCreators = filter === 'all' ? creators : creators.filter(c => c.category === filter);

  return (
    <div className="min-h-screen bg-gray-50 pt-24">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <FadeIn>
          <div className="text-center mb-12">
            <h1 className="text-5xl font-bold text-gray-900 mb-6">Our Creators</h1>
            <p className="text-xl text-gray-600 max-w-3xl mx-auto">
              Discover top-tier influencers ready to elevate your brand
            </p>
          </div>
        </FadeIn>

        <FadeIn delay={100}>
          <div className="flex flex-col sm:flex-row justify-between items-center mb-8 gap-4">
            <div className="flex gap-2 overflow-x-auto pb-2 w-full sm:w-auto">
              {['all', 'tech', 'lifestyle', 'fitness', 'finance'].map((cat) => (
                <button
                  key={cat}
                  onClick={() => setFilter(cat)}
                  className={`px-4 py-2 rounded-full text-sm font-medium capitalize whitespace-nowrap transition-colors ${
                    filter === cat 
                      ? 'bg-green-600 text-white' 
                      : 'bg-white text-gray-700 hover:bg-green-50'
                  }`}
                >
                  {cat}
                </button>
              ))}
            </div>
            <div className="relative w-full sm:w-64">
              <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" size={20} />
              <input 
                type="text" 
                placeholder="Search creators..." 
                className="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-full focus:outline-none focus:border-green-500"
              />
            </div>
          </div>
        </FadeIn>

        <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {filteredCreators.map((creator, index) => (
            <FadeIn key={index} delay={index * 100}>
              <div className="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all group">
                <div className="h-48 bg-gradient-to-br from-green-400 to-green-600 flex items-center justify-center">
                  <div className="w-24 h-24 bg-white rounded-full flex items-center justify-center text-3xl font-bold text-green-600 shadow-lg">
                    {creator.image}
                  </div>
                </div>
                <div className="p-6">
                  <div className="flex justify-between items-start mb-2">
                    <div>
                      <h3 className="text-xl font-bold text-gray-900">{creator.name}</h3>
                      <p className="text-green-600 text-sm font-medium">{creator.niche}</p>
                    </div>
                    <span className="px-3 py-1 bg-green-100 text-green-700 text-xs rounded-full font-medium">
                      {creator.followers}
                    </span>
                  </div>
                  <button className="w-full mt-4 bg-gray-900 text-white py-3 rounded-xl font-medium hover:bg-green-600 transition-colors flex items-center justify-center gap-2">
                    Hire Creator
                    <ArrowRight size={18} />
                  </button>
                </div>
              </div>
            </FadeIn>
          ))}
        </div>
      </div>
    </div>
  );
};

